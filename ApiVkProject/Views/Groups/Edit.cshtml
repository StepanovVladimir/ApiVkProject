@model ApiVkProject.Models.Group
@using ApiVkProject.Models
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span>Участники</span>
                <br />
                @foreach (User user in ViewBag.Users)
                {
                    <label>
                        <input type="checkbox" name="selectedUsers" value="@user.Id"
                            @(((List<GroupHasUser>)ViewBag.GroupHasUser)
                            .Any(gu => gu.UserId == user.Id) ? "checked=\"checked\"" : "") />
                        @user.FirstName @user.LastName
                        <br />
                    </label>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
